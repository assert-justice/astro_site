---
import NavLink from "./nav_link.astro";
const {pageTitle} = Astro.props;
const pages = [
    ['Home', '/'],
    ['Courses', '/courses'],
    ['Glossary', '/glossary'],
    ['Projects', '/projects'],
    ['About', '/about'],
    ['Contact', '/contact'],
];
---

<nav>
    <ul>
        <li>Misfit Coding</li>
        {pages.map(([title, path]) => <NavLink title={title} currentTitle={pageTitle} path={path}/>)}
    </ul>
</nav>

